{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["firebase/firestore"] 
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/context/CartContext.tsx", "app/components/Checkout.js", "app/components/Welcome.js", "app/components/Navbar.js", "app/components/LatestArrivals.js", "app/components/ThirtyPercentOff.js", "app/components/AboutSection.js", "app/components/ProductPageClient.js", "app/components/ProductList.js", "app/product/[id]/ProductDetailsClient.js", "app/product/[id]/page.js"],
  "exclude": ["node_modules"]
}

